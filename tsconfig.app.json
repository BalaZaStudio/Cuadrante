{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types" // Si tienes un directorio de tipos personalizado
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
